
<%- include('partials/header') %> 

<div class="cart-carrinho">
    <h3>Carrinho de livros</h3>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Imagem</th>
          <th>Autor</th>
          <th>Pre√ßo</th>
          <th>Quantidade</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% carrinho.forEach(item => { %>
        <tr>
          
          <td><%= item.id %> </td>
          <td class= "imagem-carrinho"> <img src=<%= item.imagem %> alt= "" > </td>
          <td><%= item.nome %></td>
          <td><%= item.valor %></td>
          <td>
            <button class="decrease">-</button>
            <input type="text" value="1" class="quantity">
            <button class="increase">+</button>
          </td>
          <td class="item-total">R$20,00</td>
          <input type="hidden" name="produtoId">
          <td>
            <form action="/carrinho" method="delete">
            <input type="hidden" name="produtoId" value="<%= item.id %>">
            <button type="submit" class="remove">Remover</button>
          </td>

          </form>
          <% })%>
 
        </tr>

      </tbody>
      <tfoot>
        <tr>
          <td colspan="4"></td>
          <td>Total:</td>
          <td class="cart-total">R$35,00</td>
        </tr>
      </tfoot>
    </table>
  </div>
    <%- include('partials/footer') %>

