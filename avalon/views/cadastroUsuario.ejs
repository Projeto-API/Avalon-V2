<%- include('partials/header') %>
    <link rel="stylesheet" href="/stylesheets/CadastroUsuario.css">
    <main>

        <script src="/javascripts/validacoescadastro.js" defer></script>
        <section class="cadastro">
            <div class="cadastro2">
                <h5>CADASTRO</h5>
            </div>
            <form class="form-auth card" method="post" action="/registro">
                <div>
                    <li class="form-cadastro-usuario">E-mail</li>
                    <input type="email" name="email" placeholder="Digite seu email">
                    <li class="form-cadastro-usuario">Senha</li>
                    <input type="password" name="senha" placeholder="Digite sua senha">
                    <li class="form-cadastro-usuario">Confirme sua senha</li>
                    <input type="password" name="password" placeholder="Confirme sua senha">
                </div>
                
                <div>
                    <br>
                    <li class="form-cadastro-usuario">Nome</li>
                    <input type="text" name="nome" placeholder="Escreva seu primeiro nome">
                    <li class="form-cadastro-usuario">Sobrenome</li>
                    <input type="text" name="sobrenome" placeholder="Escreva seu sobrenome">
                    <li class="form-cadastro-usuario">CPF</li>
                    <input type="number" name="doc_identificacao" placeholder="Escreva seu CPF">
                    <li class="form-cadastro-usuario">Data de Nascimento</li>
                    <input type="date" name="nascimento" placeholder="Digite sua data de nascimento">
                    <li class="form-cadastro-usuario">Telefone</li>
                    <input type="tel" name="nascimento" placeholder="Digite seu número de telefone">
                    <li class="form-cadastro-usuario">CEP</li>
                    <input type="text" name="cep" placeholder="Digite o CEP">
                    <li class="form-cadastro-usuario">Endereço</li>
                    <input type="text" name="cep" placeholder="Digite o Endereço">
                    <li class="form-cadastro-usuario">Foto de Perfil</li>
                    <input type="file" name="fotoperfil" >
                </div>

                <button class="entrar" type="submit"><a href="/views/MinhaConta.ejs">
                        CADASTRE-SE
                </button></a>
            </form>
    </main>
    <%- include('partials/footer') %>