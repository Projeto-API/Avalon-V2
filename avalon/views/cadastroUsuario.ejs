<%- include('partials/header') %>
<script src="/javascripts/validacoesCadastro.js" defer></script>
<link rel="stylesheet" href="/stylesheets/CadastroUsuario.css" />
<main>
  <section class="cadastro">
    <div class="cadastro2">
      <h5>CADASTRO</h5>
    </div>
    <% if(typeof errors !== 'undefined'){  %>
      <font size ="-1">
      <ul style="list-style-type: none;">
        <% for(let error in errors){ %>
          <li><center>
            <b style='color:darkred'><%= error%>: </b>
            <%= errors[error].msg%></center></li>
          <% } %>
      </ul>
         <% } %>
      </font>
    <form class="form-auth card" action="/users/cadastro" method="post">
      <br />
      <label for="email">E-mail</label>
      <input
        class="input-form"
        type="email"
        name="e-mail"
        placeholder="Digite seu email"
      />
      <label for="senha">Senha</label>
      <input
        class="input-form"
        type="password"
        name="Senha"
        placeholder="Digite sua senha"
        value="<%= locals.old && old.passwordCadastro%>"
        />
      <label for="password">Confirme sua senha</label>
        <input
          class="input-form"
          type="password"
          name="Senha"
          placeholder="Confirme sua senha"
        />
      </p>

      <hr class="hr" />
      <label for="nome">Nome</label>
      <input
        class="input-form"
        type="text"
        name="Nome"
        placeholder="Digite seu nome"
      />
      <label for="sobrenome">Sobrenome</label>
      <input
        class="input-form"
        type="text"
        name="Sobrenome"
        placeholder="Digite seu sobrenome"
      />
      <label for="data_nascimento">Data de Nascimento</label>
      <input
        class="input-form half"
        type="date"
        name="Data de nascimento"
        placeholder="Digite sua data de nascimento"
      />
      <label for="doc_identificacao">CPF</label>
      <input
        class="input-form"
        type="text"
        name="CPF"
        placeholder="Digite seu CPF"
      />
      <hr class="hr" />
      <label for="cep">CEP</label>
      <input
        class="input-form"
        type="text"
        name="CEP"
        placeholder="Digite seu CEP"
      />
      <label for="estado">Estado</label>
      <input
        class="input-form"
        type="text"
        name="Estado"
        placeholder="Digite seu estado"
      />
      <label for="cidade">Cidade</label>
      <input
        class="input-form"
        type="text"
        name="Cidade"
        placeholder="Digite sua cidade"
      />
      <label for="endereco">Endereço</label>
      <input
        class="input-form"
        type="text"
        name="Endereço"
        placeholder="Digite seu endereço"
      />
      <label for="numero">Número</label><br />
      <input
        class="input-form half"
        type="text"
        name="numero"
        placeholder="Digite o número"
      />
      <label for="complemento">Complemento</label><br />
      <input
        class="input-form half"
        type="text"
        name="Complemento"
        placeholder="Opcional"
      />
      <label for="foto">Foto</label>
      <input type="file" name="foto" />
      <button class="btnCrud" id="btnSalvar" type="submit">
        <a>Salvar</a>
      </button>
    </form>
  </section>
</main>
<%- include('partials/footer') %>
