    <main>
        <section class="carrinho-header">
            <h3> Carrinho</h3>
         </section>
        <section class="containerLivro">
           <ul  class="cabecalho">
                <li id="header1"><span>Livro</span></li>
                <li id="header2"><span>QUANTIDADE</span></li>
                <li id="header3"><span>PREÇO</span></li>
            </ul>



            <div class="Livro">
                <% carrinho.forEach(item => { %>
                <img class="imagemLivro" src=<% item.imagem %> alt="">
                <div class="informationLivro">
                    <div class="nomeLivro">
                        
                        <h5 id="LivroTitulo"><%= item.nome %></h5>
                    </div>
                    <div class="informationLivroValue">
                        <div>
                            <button onclick="diminuirQtd('down')" class="diminuirQtd">-</button>
                            <input type="number" id="quantidadeValue" value="2">
                            <button type="button" onclick="aumentarQtd('up')" class="aumentarQtd">+</button>
                        </div>
                        
                        <span id="preco"> R$ <%= item.valor %> </span>
                        <button>Atualizar</button>
                        <button class="excluir">X</button>
                    </div>
                </div>
            </div>
            
