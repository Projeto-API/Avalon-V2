<%- include('partials/header') %>
  <link rel="stylesheet" href="/stylesheets/carrinho.css">
  <main>

    <section class="carrinho-container">
      <section class="containerLivro">
        <div class="carrinho-header">
          <h3> Carrinho</h3>
        </div>

        <div id="produto-carrinho">
          <div class="produto" id="produto-">
            <img class="livro-imagem" src="" alt="">
            <div class="informationLivro">
              <div class="nomeLivro">
                <h5 class="imagem-titulo"></h5>
              </div>
              <div class="informationLivroValue">
                <div>
                  <input class="produto-quantidade" type="number"  min="1" value="">
                  <span class="livro-preco"></span>
                </div>
              </div>
            </div>
            <div class="livro-remove">
              <span class="cart-total"></span>
            </div>
          </div>

        </div>
      </section>

      <section class="containerFinalizacao">
        <div class="containerEntrega">
          <h6>Entrega</h6>
          <div>
            <input id="endereco" type="text" placeholder="CEP">
            <button id="calcular"><a href="">CALCULAR</a></button>
          </div>
        </div>

        <div class="containerCheckout">
          <h5>RESUMO DO PEDIDO</h5>
          <br>
          <table class="table">
            <tbody>

              <tr class="itens">
                <td>Subtotal</td>
                <td id="cart-total-subtotal"></td>
              </tr>
              <tr class="itens">
                <td class="info">Entrega</td>
                <td class="monetary" id="resultadoFrete">Gr√°tis</td>
              </tr>
              <tr class="itens">
                <td class="info">Desconto</td>
                <td id="cart-total-desconto">0,00</td>
              </tr>
            </tbody>

            <tfoot>
              <tr>
                <td class="info">Total</td>
                <td class="monetary" id="cart-total-Final">R$ </td>
              </tr>
              <tr>
                <td colspan="2">
                  <button type="submit" class="continuar" id="finalizarCompra" onclick="comprarAgora()"><a
                      href="/carrinho/checkout"> Comprar
                      agora</a></button>
                </td>
              </tr>
            </tfoot>
          </table>


        </div>
      </section>
    </section>
  </main>
  <%- include('partials/footer') %>