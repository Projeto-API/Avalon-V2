<%- include('partials/header') %>
  <link rel="stylesheet" href="/stylesheets/carrinho.css">
  <main>

    <section class="carrinho-container">
      <section class="containerLivro">
        <div class="carrinho-header">
          <h3> Carrinho</h3>
        </div>

        <div id="produto-carrinho">
          <div class="produto-cart" id="produto-">
            <img class="livro-imagem-cart" src="" alt="">
            <div class="informationLivro">
              <div class="nomeLivro">
                <h5 class="imagem-titulo"></h5>
              </div>
              <div class="informationLivroValue">
                <input class="produto-quantidade" type="number" min="1" value="">
                <span class="livro-preco"></span>
              </div>
            </div>
            <div class="livro-remove">
              <span class="cart-total"></span>
            </div>
          </div>

        </div>
      </section>

      <section class="containerFinalizacao">
        <div class="containerEntrega">
          <h6>Entrega</h6>
          <form class="formFrete" action="/carrinho/enderecos" method="get">
            <input id="endereco" type="text" name="cep" placeholder="CEP">
            <button id="calcular" type="submit">CALCULAR</button>
          </form>
        </div>

        <div class="containerCheckout">
          <h5>RESUMO DO PEDIDO</h5>
          <br>
          <table class="table">
            <tbody>

              <tr class="itens">
                <td>Subtotal</td>
                <td id="cart-total-subtotal"></td>
              </tr>
              <tr class="itens">
                <td class="info">Entrega</td>
                <td class="monetary" id="resultadoFrete">
                  <%= valorFrete %>
                </td>
              </tr>
              <tr class="itens">
                <td class="info">Desconto</td>
                <td id="cart-total-desconto">R$ -0,00</td>
              </tr>
              <tr>
                <td class="info">Total</td>
                <td class="monetary" id="cart-total-final">
                </td>
              </tr>
            </tbody>

            <tfoot>
              <tr>
                <td colspan="2">
                  <button class="continuar" id="finalizarCompra"><a href="/carrinho/checkout/<%= userId %>"> Finalizar
                      Compra
                    </a></button>
                </td>
              </tr>
            </tfoot>
          </table>


        </div>
      </section>
    </section>
  </main>
  <%- include('partials/footer') %>