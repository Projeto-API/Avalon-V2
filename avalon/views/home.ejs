<%- include('partials/header') %>
    <link rel="stylesheet" href="/stylesheets/home.css">

    <main>
        <section class="banner">
            <img id="banner" src="/images/banner.jpg" alt="">
        </section>
        <section class="big3">
            <div class="big3-icons">
                <a href="Sinopse.ejs">MAIS VENDIDOS</a>
                <div><img src="/images/mais vendidos.png" alt=""></div>
            </div>
            <div class="big3-icons">
                <a href="/Sinopse.ejs">LIVROS</a>
                <div><img src="/images/Livros.png" alt=""></div>
            </div>
            <div class="big3-icons">
                <a href="Sinopse.ejs">HQ</a>
                <div><img src="/images/quadrinhos.png" alt=""></div>
