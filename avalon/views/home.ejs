<%- include('partials/header') %>
    <link rel="stylesheet" href="/stylesheets/home.css">

    <main>


        <section class="carrossel">
            <div class="carrossel-container">
                <div class="slide">
                    <img src="/images/banners/LEVE3PAGUE2.png" alt="Banner 1">
                </div>
                <div class="slide">
                    <img src="/images/banners/RESSACA.png" alt="Banner 2">
                </div>
                <div class="slide">
                    <img src="/images/banners/QUADRINHOS.png" alt="Banner 3">
                </div>
            </div>

            <div class="controls">
                <span class="prev">&#10094;</span>
                <span class="next">&#10095;</span>
            </div>
        </section>


        <section class="big3">
            <div class="big3-icons">
                <a href="Sinopse.ejs">MAIS VENDIDOS</a>
                <div><img src="/images/mais vendidos.png" alt=""></div>
            </div>
            <div class="big3-icons">
                <a href="/produto/todos/categoria/buscar?search=2">LIVROS</a>
                <div><img src="/images/Livros.png" alt=""></div>
            </div>
            <div class="big3-icons">
                <a href="/produto/todos/categoria/buscar?search=1">HQ</a>
                <div><img src="/images/quadrinhos.png" alt=""></div>
            </div>
        </section>

        <section>
            <div class="lancamento">
                <h5 class="title">LANÃ‡AMENTOS
                
                </h5>

                <div class="carrousel" id="carrousel">
                    <div class="gallery" id="gallery">
                        <% livrosLancamento.forEach(el=> { %>
                            <li class="item current-item">
                                <img class="item-img" src="/images/produtos/<%= el.capa %>" alt="dna" id="<%= el.id %>">
                                <div>
                                    <h5 class="item-name">
                                        <%= el.titulo %>
                                    </h5>
                                    <span class="item-price">
                                        R$ <%= el.preco %>
                                    </span>
                                    <button class="comprar"><a href="#">COMPRAR</a></button>
                                </div>
                            </li>
                            <% }) %>
                    </div>
                </div>
                <button id="prev" class="arrow-left"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                        fill="currentColor" class="bi bi-caret-left-fill" viewBox="0 0 16 16">
                        <path
                            d="m3.86 8.753 5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z" />
                    </svg></button>
                <button id="next" class="arrow-right"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                        fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16">
                        <path
                            d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z" />
                    </svg></button>
            </div>
        </section>

        <section class="destaque">
            <h4>DESTAQUES</h4><br>
            <nav>
                <div class="grid">
                    <button class="comprar" id="destaque-comprar"><a href="#">COMPRAR</a></button>
                    <div>
                        <a href=""><img id="grid-1" src="/images/produtos/destaque-capa.png" alt=""></a>
                    </div>
                    <div>
                        <div>
                            <a href=""><img id="grid-2" src="/images/produtos/destaque-1.png" alt=""></a>
                        </div>
                        <div>
                            <a href=""><img id="grid-3" src="/images/produtos/destaque-2.png" alt=""></a>
                        </div>
                    </div>
                    <div>
                        <a href=""><img id="grid-4" src="/images/produtos/destaque-3.png" alt=""></a>
                    </div>
                </div>
            </nav>
        </section>

        <section>
            <div class="continue-vendo">
                <h5 class="title">CONTINUE VENDO</h5>

                <div class="carrousel" id="carrousel2">
                    <div class="gallery" id="gallery2">
                        <% livros.forEach(el=> { %>
                            <li onclick=redirect() class="item current-item">
                                <img class="item-img" class="produto" src="/images/produtos/<%= el.capa %>"
                                    id="<%= el.id %>" alt="dna">
                                <div>
                                    <h5 class="item-name">
                                        <%= el.titulo %>
                                    </h5>
                                    <span class="item-price">
                                        R$ <%= el.preco %>
                                    </span>
                                    <button class="comprar"><a href="#">COMPRAR</a></button>
                                </div>
                            </li>
                            <% }) %>
                    </div>
                </div>
                <button id="prev2" class="arrow-left"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                        fill="currentColor" class="bi bi-caret-left-fill" viewBox="-2 -2 20 20">
                        <path
                            d="m3.86 8.753 5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z" />
                    </svg></button>
                <button id="next2" class="arrow-right control"><svg xmlns="http://www.w3.org/2000/svg" width="16"
                        height="16" fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16">
                        <path
                            d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z" />
                    </svg></button>
            </div>
        </section>

    </main>

    <%- include('partials/footer') %>